<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vamashikrishna.passiton">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LaunchingActivity" />
        <activity android:name=".EmployeeActivity" />
        <activity android:name=".PeopleActivity" />
        <activity android:name=".FinanceActivity" />
        <activity android:name=".SignUpEmployee" />
        <activity android:name=".SignUpPeople" />
        <activity android:name=".SignUpFinance" />
        <activity
            android:name=".AfterLoginEmployee"
            android:label="@string/title_activity_after_login_employee"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfterLoginPeople"
            android:label="@string/title_activity_after_login_people"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AfterLoginFinance"
            android:label="@string/title_activity_after_login_finance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Forms"
            android:label="@string/title_activity_forms"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
